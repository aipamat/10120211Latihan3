<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="54dp"
            android:layout_marginRight="26dp"
            android:text="Kode Keluarga"
            android:textColor="#de000000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="26dp"
            android:text="Ketikkan Kode Keluarga yang Ayah Bunda miliki disini"
            android:textColor="#de000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtInputCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/bg_edit_white_border_black_rounded25"
            android:gravity="center"
            android:hint="Tuliskan Kode Keluarga disini"
            android:inputType="textCapCharacters"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="#de000000"
            android:textColorHint="#bababb"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCheckCodeAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="26dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Dengan menekan tombol di bawah ini berarti Anda menyetujui &lt;b>Ketentuan Pengguna&lt;/b> dan &lt;b>Kebijakan Data&lt;/b> kami"
            android:textColor="#de000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnCheckCode"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_gradient_yellow_rounded18"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textColor="#de000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lin_border_white"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Belum punya kode keluarga?"
            android:textColor="#de000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnBuyCode"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/bg_button_gradient_blue_rounded18"
            android:text="Beli Kode Keluarga Disini"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>