<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="26dp"
        android:paddingEnd="26dp"
        android:paddingBottom="34dp"
        tools:context=".view.activation.ActivationFragment">

        <TextView
            android:id="@+id/txtDoneTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Beres! Sekarang"
            android:textColor="#525b60"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDoneNext"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_button_gradient_yellow_rounded18"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="87dp"
            android:paddingEnd="87dp"
            android:text="Oke"
            android:textAllCaps="false" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>